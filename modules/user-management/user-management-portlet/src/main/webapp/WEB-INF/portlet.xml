<?xml version="1.0"?>

<portlet-app
	version="3.0"
	xmlns="http://xmlns.jcp.org/xml/ns/portlet"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/portlet http://xmlns.jcp.org/xml/ns/portlet/portlet-app_3_0.xsd"
>
	<portlet>
		<portlet-name>resetpassword</portlet-name>
		<display-name>ResetPassword</display-name>
		<portlet-class>com.tcs.cuscal.portlet.ResetPassword</portlet-class>
		<init-param>
			<name>check-auth-token</name>
			<value>false</value>
		</init-param>
		<init-param>
			<name>passwordRecovery-jsp</name>
			<value>/html/resetpassword/passwordRecovery.jsp</value>
		</init-param>
		<init-param>
			<name>error-view-jsp</name>
			<value>/html/resetpassword/errorPage.jsp</value>
		</init-param>
		<init-param>
			<name>login-jsp</name>
			<value>/html/resetpassword/login.jsp</value>
		</init-param>
		<init-param>
			<name>retypePassword-jsp</name>
			<value>/html/resetpassword/retypePassword.jsp</value>
		</init-param>
		<init-param>
			<name>success-jsp</name>
			<value>/html/resetpassword/success.jsp</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>VIEW</portlet-mode>
		</supports>
		<resource-bundle>content.Language</resource-bundle>
		<portlet-info>
			<title>ResetPassword</title>
			<short-title>ResetPassword</short-title>
			<keywords></keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
	<portlet>
		<portlet-name>manageaccountportlet</portlet-name>
		<display-name>ManageAccountPortlet</display-name>
		<portlet-class>com.tcs.cuscal.portlet.ManageAccountPortlet</portlet-class>
		<init-param>
			<name>manageYourAccount-jsp</name>
			<value>/html/manageaccountportlet/manageYourAccount.jsp</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>VIEW</portlet-mode>
		</supports>
		<resource-bundle>content.Language</resource-bundle>
		<portlet-info>
			<title>ManageAccountPortlet</title>
			<short-title>ManageAccountPortlet</short-title>
			<keywords></keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
</portlet-app>